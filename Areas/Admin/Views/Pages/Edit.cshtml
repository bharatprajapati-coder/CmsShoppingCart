@model CmsShoppingCart.Models.Page

@{
    ViewData["Title"] = "Edit Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Edit Page</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Slug" />
          
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
          
            <div class="row gap-2 mt-2">
                <input type="submit" value="Edit" class="col-md-4 btn btn-primary gap-2" />
                <a asp-action="Index" class=" col-md-4 btn btn-outline-primary text-black"> Back to List</a>

            </div>
        </form>
    </div>
</div>

<script>
    if ('@TempData["msg"]' != '' && '@TempData["type"]' != '') {
        toastr["@TempData["type"]"]('@TempData["msg"]');
    }
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
